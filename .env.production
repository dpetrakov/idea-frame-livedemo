# Database
POSTGRES_DB=ideaframe
POSTGRES_USER=ideaframe
POSTGRES_PASSWORD=change_this_to_secure_password
POSTGRES_PORT=5432

# Backend
DATABASE_URL=postgres://ideaframe:change_this_to_secure_password@postgres:5432/ideaframe?sslmode=disable
JWT_SECRET=change_this_to_secure_secret_minimum_32_characters_long_production
BACKEND_PORT=8080

# Application
ENV=production
LOG_LEVEL=info

# Domain and ports for production
DOMAIN=ideaframe.dimlight.online
APP_PORT=80
APP_HTTPS_PORT=443

# Let's Encrypt certificate email
# Важно: укажите реальный email для получения уведомлений о сертификатах
ACME_EMAIL=admin@dimlight.online

# API Base URL for frontend build
VITE_API_BASE=/api
