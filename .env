# Локальная конфигурация для тестирования

# Целевой домен
APP_URL=localhost

# Email для Let's Encrypt (не используется в локальном режиме)
CADDY_EMAIL=test@localhost

# JWT секрет для аутентификации
JWT_SECRET=test-jwt-secret-for-local-development

# PostgreSQL конфигурация
POSTGRES_USER=ideaframe_user
POSTGRES_PASSWORD=test-password
POSTGRES_DB=ideaframe_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Строка подключения к БД
DATABASE_URL=postgres://ideaframe_user:test-password@postgres:5432/ideaframe_db?sslmode=disable

# Порты сервисов
BACKEND_PORT=8080
FRONTEND_PORT=3000

# Окружение
ENV=dev

# Frontend переменные
VITE_API_BASE=/api
