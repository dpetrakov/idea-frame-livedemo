# Database
POSTGRES_DB=ideaframe
POSTGRES_USER=ideaframe
POSTGRES_PASSWORD=changeme
POSTGRES_PORT=5432

# Backend
DATABASE_URL=postgres://ideaframe:changeme@postgres:5432/ideaframe?sslmode=disable
JWT_SECRET=change_this_to_secure_secret_minimum_32_characters_long
BACKEND_PORT=8080

# Application
ENV=dev
LOG_LEVEL=info

# Domain and ports
# For production use: DOMAIN=yourdomain.com, APP_PORT=80, APP_HTTPS_PORT=443
# For local development: DOMAIN=localhost, APP_PORT=3000, APP_HTTPS_PORT=3443
DOMAIN=localhost
APP_PORT=3000
APP_HTTPS_PORT=3443

# Let's Encrypt certificate email (required for production)
# Leave empty for localhost (will use self-signed certificate)
ACME_EMAIL=

# API Base URL for frontend build
VITE_API_BASE=/api/v1
