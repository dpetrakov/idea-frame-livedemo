# Конфигурация для системы фрейминга портфеля инициатив
# Скопируйте этот файл в .env и заполните реальными значениями

# Целевой домен для развертывания
APP_URL=ideaframe.dimlight.online

# Email для Let's Encrypt сертификатов
CADDY_EMAIL=admin@dimlight.online

# JWT секрет для аутентификации (генерируйте случайную строку 32+ символов)
JWT_SECRET=super-secret-jwt-key-change-in-production

# Конфигурация PostgreSQL
POSTGRES_USER=ideaframe_user
POSTGRES_PASSWORD=secure-db-password-change-me
POSTGRES_DB=ideaframe_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Строка подключения к БД (замените USER и PASSWORD на значения выше)
DATABASE_URL=postgres://ideaframe_user:secure-db-password-change-me@postgres:5432/ideaframe_db?sslmode=disable

# Порты сервисов (внутренние)
BACKEND_PORT=8080
FRONTEND_PORT=3000

# Окружение
ENV=prod

# Frontend переменные
VITE_API_BASE=/api
